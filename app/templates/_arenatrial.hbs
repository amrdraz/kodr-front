<section class="row">
<div class="col-lg-6">
    <a id="run" {{action "runInConsole"}} class="btn btn-default pull-right challenge-run">Run in Console <i class="glyphicon glyphicon-play"></i></a>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#code" data-toggle="tab">Code</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane  fade in active" id="code">
        {{code-editor
          name="codeEditor"
          id="editor"
          class="col-lg-12"
          model=model
          attr='code' }}
      </div>
    </div>
</div>
<div class="col-lg-6">
    <a id="run" {{action "run"}} class="btn {{if model.complete 'btn-success' 'btn-primary' }} pull-right {{if model.canSubmit '' 'disabled'}} challenge-submit" }} >
      {{#if model.complete}}
        {{#if model.hasDirtyAttributes}}
          Re-Submit <i class="glyphicon glyphicon-play"></i>
        {{else}}
          Completed <i class="glyphicon glyphicon-ok"></i>
        {{/if}}
      {{else}}
        Submit <i class="glyphicon glyphicon-play"></i>
      {{/if}}
    </a>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#console" data-toggle="tab">Console</a></li>
      <li class=""><a href="#results" data-toggle="tab">Results</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade in active" id="console">
        {{code-console}}
      </div>
      <div class="tab-pane fade" id="results">
        {{results}}
      </div>
      <div id="sandbox">
        {{iframe-sandbox}}
      </div>
    </div>
</div>  
</section>
