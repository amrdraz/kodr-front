
<section class="group-settings row">
<form role="form" {{action "submit" on="submit"}}>
  <div class="form-group">
    <div class="col-lg-12">
      <label for="name" class="control-label">Group name</label>
      {{input id="name" value=name class="group-base-name form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <label for="name" class="control-label">Starting number</label>
      {{input id="from" type='number' value=from class="group-from form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <label for="name" class="control-label">Ending Number</label>
      {{input id="to" type='number' value=to class="group-to form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </div>
</form>
</section>